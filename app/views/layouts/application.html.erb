<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= action_cable_meta_tag %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  </head>

  <body>
    <header class="sticky-top fixed-top">

    <nav class="navbar" >
      <div class="container-fluid">

        <div class="navbar-logo">
          <a href="/"><span class="icon-logo"></span></a>
        </div>

        <form class="navbar-form">
          <div class="input-group" >
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn" id="search" type="submit">
                <span class="icon-search"></span>
              </button>
            </div>
          </div>
        </form>

        <ul class="nav">
          <li>
            <% if current_user %>
              <%= link_to 'Profile', user_path(current_user), class: 'profile_link' %>
            <% end %>
          </li>
          <li><a href="/">Home</span></a></li>
          <li><a href="#"><span class="icon-friends" id="icon"></span></a></li>
          <li><a href="#"><span class="icon-messages" id="icon"></span></a></li>
          <li><a href="#"><span class="icon-notifications" id="icon"></span></a></li>
          <div class="dropdown show">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="icon-help" id="icon"></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= render 'devise/menu/registration_items' %>
              <%= render 'devise/menu/login_items' %>
            </div>
          </div>
        </ul>
      </div>
    </nav>


    </header>
    <section id="main">

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  </body>
</html>
